<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorTheme</item>
        <item name="colorPrimaryDark">@color/colorTheme</item>
        <item name="colorAccent">@color/colorTheme</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="line">
        <item name="android:background">@color/colorLine</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.75dp</item>
    </style>

    <style name="DialogInOutBottom" parent="@style/Theme.AppCompat.DayNight.Dialog">
        <!--背景-->
        <item name="android:windowBackground">@color/dialogBackground</item>
        <item name="android:windowAnimationStyle">@style/dialog.animation</item>
    </style>

    <style name="dialog.animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="TabLayoutTextSizeStyle">
        <item name="android:textSize">@dimen/sp_15</item>
    </style>
</resources>
