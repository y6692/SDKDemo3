<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/llContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="@dimen/dp_5"
            app:cardElevation="@dimen/dp_0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp_12">

                <ImageView
                    android:id="@+id/sdvImage"
                    android:layout_width="match_parent"
                    android:layout_height="178dp"
                    android:layout_marginBottom="@dimen/dp_12" />

                <TextView
                    android:id="@+id/tvExplain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color2A2A2A"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tvExplainHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:textColor="@color/colorB3B3B3"
                    android:textSize="@dimen/sp_15"
                    android:visibility="gone" />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvSellList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12">

                </android.support.v7.widget.RecyclerView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cvImmediatelyTest"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:layout_marginTop="@dimen/dp_12"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/colorFFD400"
                    app:cardCornerRadius="@dimen/dp_5"
                    app:cardElevation="@dimen/dp_0">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/test_immediately"
                        android:textColor="@color/color2A2A2A"
                        android:textSize="@dimen/sp_15" />


                </android.support.v7.widget.CardView>


            </LinearLayout>


        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:src="@mipmap/xz_icon_close" />

    </LinearLayout>


</layout>