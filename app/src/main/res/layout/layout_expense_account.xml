<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/llExpenseAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <View
            style="@style/line"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_29"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_12">

                <ImageView
                    android:id="@+id/ivCompany"
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:clickable="true"
                    android:src="@mipmap/btn_radio" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:text="@string/company"
                    android:textColor="@color/color292929"
                    android:textSize="@dimen/sp_15" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_29"
                android:layout_marginLeft="@dimen/dp_40"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_12">

                <ImageView
                    android:id="@+id/ivPersonageOrOther"
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:clickable="true"
                    android:src="@mipmap/btn_radio_pre" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:text="@string/personage_or_other"
                    android:textColor="@color/color292929"
                    android:textSize="@dimen/sp_15" />

            </LinearLayout>


        </LinearLayout>

        <View
            style="@style/line"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/llEnterpriseInvoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <include
                    android:id="@+id/iInvoiceEnterpriseName"
                    layout="@layout/layout_tab_edit" />

                <View
                    style="@style/line"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12" />

                <include
                    android:id="@+id/iInvoiceEnterpriseTaxpayerNumber"
                    layout="@layout/layout_tab_edit" />

                <View
                    style="@style/line"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12" />

                <include
                    android:id="@+id/iInvoiceEnterpriseEmail"
                    layout="@layout/layout_tab_edit" />

                <View
                    style="@style/line"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite">

                    <LinearLayout
                        android:id="@+id/llOtherInfoContainer"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_44"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_12"
                        android:paddingRight="@dimen/dp_12">

                        <TextView
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="@string/other_info_optional"
                            android:textColor="@color/color292929"
                            android:textSize="@dimen/sp_15" />

                        <ImageView
                            android:id="@+id/ivPop"
                            android:layout_width="@dimen/dp_18"
                            android:layout_height="@dimen/dp_10"
                            android:src="@mipmap/btn_pop_pre" />

                    </LinearLayout>
                </FrameLayout>


                <LinearLayout
                    android:id="@+id/llOtherInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <View
                        style="@style/line"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_12" />

                    <include
                        android:id="@+id/iInvoiceEnterprisePhone"
                        layout="@layout/layout_tab_edit" />

                    <View
                        style="@style/line"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_12" />

                    <include
                        android:id="@+id/iInvoiceRegisterAddress"
                        layout="@layout/layout_tab_edit" />

                    <View
                        style="@style/line"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_12" />

                    <include
                        android:id="@+id/iInvoiceRegisterTel"
                        layout="@layout/layout_tab_edit" />

                    <View
                        style="@style/line"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_12" />

                    <include
                        android:id="@+id/iInvoiceOpenBank"
                        layout="@layout/layout_tab_edit" />

                    <View
                        style="@style/line"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_12" />

                    <include
                        android:id="@+id/iInvoiceOpenAccount"
                        layout="@layout/layout_tab_edit" />


                </LinearLayout>

            </LinearLayout>


            <android.support.v7.widget.CardView
                android:id="@+id/cvCompanyNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_80"
                android:layout_marginTop="@dimen/dp_44"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_12"
                android:visibility="gone"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="@dimen/dp_5"
                app:cardElevation="@dimen/dp_4">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvCompanyNumber"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_140" />
            </android.support.v7.widget.CardView>

        </FrameLayout>


        <LinearLayout
            android:id="@+id/llPeopleInvoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:visibility="gone">

            <include
                android:id="@+id/iInvoicePeopleName"
                layout="@layout/layout_tab_edit" />

            <View
                style="@style/line"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12" />

            <include
                android:id="@+id/iInvoicePeopleEmail"
                layout="@layout/layout_tab_edit" />

            <View
                style="@style/line"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12" />

            <include
                android:id="@+id/iInvoicePeoplePhone"
                layout="@layout/layout_tab_edit" />


        </LinearLayout>


    </LinearLayout>


</layout>