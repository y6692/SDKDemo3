<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15">

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_28"
                    android:gravity="center"
                    android:textColor="@color/color2A2A2A"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tvRoute"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_weight="1"
                    android:ellipsize="middle"
                    android:gravity="center"
                    android:lines="1"
                    android:textColor="@color/color2A2A2A"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tvCabinInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_28"
                    android:gravity="center"
                    android:textColor="@color/color2A2A2A"
                    android:textSize="@dimen/sp_15" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvOriginAisle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="北京西站"
                        android:textColor="@color/color2A2A2A"
                        android:textSize="@dimen/sp_12" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="-2dp"
                            android:layout_marginBottom="-12dp"
                            android:text="+1"
                            android:textColor="@color/colorFF4E50"
                            android:textSize="@dimen/sp_10"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/tvOriginTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_2"
                            android:layout_marginRight="@dimen/dp_2"
                            android:gravity="center"
                            android:text="6:50"
                            android:textColor="@color/colorBlue"
                            android:textSize="@dimen/sp_30" />
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvPassAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_4"
                        android:gravity="center"
                        android:textColor="@color/color666666"
                        android:textSize="@dimen/sp_12" />

                    <ImageView
                        android:id="@+id/ivTrafficIcon"
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_16"
                        android:src="@mipmap/airp_icon_way" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDestinationAisle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="北京西站"
                        android:textColor="@color/color2A2A2A"
                        android:textSize="@dimen/sp_12" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvDiffDays"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="-2dp"
                            android:layout_marginBottom="-12dp"
                            android:textColor="@color/colorFF4E50"
                            android:textSize="@dimen/sp_10" />

                        <TextView
                            android:id="@+id/tvDestinationTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_2"
                            android:layout_marginRight="@dimen/dp_2"
                            android:gravity="center"
                            android:text="6:50"
                            android:textColor="@color/colorBlue"
                            android:textSize="@dimen/sp_30" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_36"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tvVehicleType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/color666666"
                    android:textSize="@dimen/sp_10" />

                <View
                    android:id="@+id/vLine"
                    style="@style/line"
                    android:layout_width="@dimen/dp_0.75"
                    android:layout_height="@dimen/dp_8"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10" />


                <TextView
                    android:id="@+id/tvMiddleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/color666666"
                    android:textSize="@dimen/sp_10" />


                <View
                    style="@style/line"
                    android:layout_width="@dimen/dp_0.75"
                    android:layout_height="@dimen/dp_8"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10" />


                <TextView
                    android:id="@+id/tvDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/color666666"
                    android:textSize="@dimen/sp_10" />

            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

</layout>