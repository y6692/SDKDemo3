<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:text="@string/order_price_detail"
            android:textColor="@color/color292929"
            android:textSize="@dimen/sp_15" />


        <include
            android:id="@+id/iTicketPrice"
            layout="@layout/item_order_price" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_12" />

        <LinearLayout
            android:id="@+id/llAviationAccidentInsurance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                style="@style/line"
                android:layout_marginBottom="@dimen/dp_12" />

            <include
                android:id="@+id/iAviationAccidentInsurance"
                layout="@layout/item_order_price" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_12" />

        </LinearLayout>


    </LinearLayout>


</layout>