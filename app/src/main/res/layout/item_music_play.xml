<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_18"
        android:paddingTop="@dimen/dp_8"
        android:paddingRight="@dimen/dp_18"
        android:paddingBottom="@dimen/dp_8">

        <ImageView
            android:id="@+id/ivPlayState"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/dp_12"
            android:src="@mipmap/music_icon_microphone"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/flClickLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_90"
            android:layout_toRightOf="@+id/ivPlayState"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvMusicTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:text="易燃易爆炸"
                android:textColor="@color/color2A2A2A"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tvMusicSinger"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:text=" - 陈粒"
                android:textColor="@color/color999999"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:padding="@dimen/dp_5"
                android:src="@mipmap/music_off" />
        </LinearLayout>
    </RelativeLayout>
</layout>