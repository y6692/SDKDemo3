<layout xmlns:android="http://schemas.android.com/apk/res/android">



    <LinearLayout
        android:id="@+id/llFooter"
        android:layout_gravity="bottom"
        android:background="@color/colorWhite"
        android:elevation="@dimen/dp_4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55">

        <RelativeLayout
            android:layout_weight="2"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent">

            <View
                android:id="@+id/vLine"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"/>

            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color292929"
                android:text="@string/order_amount"
                android:layout_above="@+id/vLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvOrderAmount"
                android:text="¥ ----"
                android:textSize="@dimen/sp_18"
                android:layout_below="@+id/vLine"
                android:textColor="@color/colorFF9100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvPersonCount"
                android:textSize="@dimen/sp_12"
                android:layout_toRightOf="@+id/tvOrderAmount"
                android:layout_alignTop="@+id/tvOrderAmount"
                android:layout_alignBottom="@+id/tvOrderAmount"
                android:layout_marginLeft="@dimen/dp_12"
                android:gravity="bottom"
                android:paddingBottom="@dimen/dp_3"
                android:textColor="@color/color292929"
                android:text="(共0人)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/llShowTicketDetail"
                android:clickable="true"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_5"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/details"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color292929"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/ivShowTicketPop"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:src="@mipmap/btn_pop2"
                    android:layout_width="@dimen/dp_11"
                    android:layout_height="@dimen/dp_6"/>

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tvSubmitOrder"
            android:text="@string/submit_order"
            android:background="@color/colorFFD400"
            android:textColor="@color/color292929"
            android:textSize="@dimen/sp_15"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"/>

    </LinearLayout>


</layout>