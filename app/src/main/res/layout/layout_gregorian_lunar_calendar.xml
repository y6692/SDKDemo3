<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <cn.carbswang.android.numberpickerview.library.NumberPickerView
        android:id="@+id/picker_year"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:npv_DividerColor="@color/colorFFD400"
        app:npv_ItemPaddingHorizontal="@dimen/dp_5"
        app:npv_ItemPaddingVertical="@dimen/dp_5"
        app:npv_RespondChangeOnDetached="false"
        app:npv_ShowCount="5"
        app:npv_TextColorHint="@color/colorFFD400"
        app:npv_TextColorNormal="@color/colorGray"
        app:npv_TextColorSelected="@color/colorTheme"
        app:npv_TextSizeHint="12dp"
        app:npv_TextSizeNormal="@dimen/sp_20"
        app:npv_TextSizeSelected="@dimen/sp_20"
        app:npv_WrapSelectorWheel="false" />


    <View
        android:layout_width="@dimen/dp_0.75"
        android:layout_height="@dimen/dp_150"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@color/colorLine" />

    <cn.carbswang.android.numberpickerview.library.NumberPickerView
        android:id="@+id/picker_month"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        app:npv_DividerColor="@color/colorFFD400"
        app:npv_ItemPaddingHorizontal="@dimen/dp_5"
        app:npv_ItemPaddingVertical="@dimen/dp_5"
        app:npv_RespondChangeOnDetached="false"
        app:npv_ShowCount="5"
        app:npv_TextColorHint="@color/colorFFD400"
        app:npv_TextColorNormal="@color/colorGray"
        app:npv_TextColorSelected="@color/colorTheme"
        app:npv_TextSizeHint="12dp"
        app:npv_TextSizeNormal="@dimen/sp_20"
        app:npv_TextSizeSelected="@dimen/sp_20"
        app:npv_WrapSelectorWheel="false" />

    <View
        android:layout_width="@dimen/dp_0.75"
        android:layout_height="@dimen/dp_150"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@color/colorLine" />

    <cn.carbswang.android.numberpickerview.library.NumberPickerView
        android:id="@+id/picker_day"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:npv_DividerColor="@color/colorFFD400"
        app:npv_ItemPaddingHorizontal="@dimen/dp_5"
        app:npv_ItemPaddingVertical="@dimen/dp_5"
        app:npv_RespondChangeOnDetached="false"
        app:npv_ShowCount="5"
        app:npv_TextColorHint="@color/colorFFD400"
        app:npv_TextColorNormal="@color/colorGray"
        app:npv_TextColorSelected="@color/colorTheme"
        app:npv_TextSizeHint="12dp"
        app:npv_TextSizeNormal="@dimen/sp_20"
        app:npv_TextSizeSelected="@dimen/sp_20"
        app:npv_WrapSelectorWheel="false" />

</LinearLayout>